label.form-label Parent companies

.form-value
  p
    - if @form_answer.parent_company.present?
      = @form_answer.parent_company
    - else
      em.text-muted Name of immediate parent company not added.
.form-value
  p.govuk-body
    - if @form_answer.parent_company_country.present?
      = ISO3166::Country.find_country_by_alpha2(@form_answer.parent_company_country).try(:name)
    - else
      em.text-muted Country of immediate Parent company not added.
- if @form_answer.parent_ultimate_control == "no"
  .form-value
    p.govuk-body
      - if @form_answer.ultimate_control_company.present?
        = @form_answer.ultimate_control_company
      - else
        em.text-muted Name of organisation with ultimate control not added.
  .form-value
    p.govuk-body
      - if @form_answer.ultimate_control_company_country.present?
        = ISO3166::Country.find_country_by_alpha2(@form_answer.ultimate_control_company_country).try(:name)
      - else
        em.text-muted Country of organisation with ultimate control not added.


