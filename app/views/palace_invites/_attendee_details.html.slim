= ff.input :title,
            as: :radio_buttons,
            collection: ["Miss", "Ms", "Mr", "Mrs", "Dr"],
            wrapper_html: { class: "govuk-radios--inline" },
            label_html: { class: "govuk-label--s" }

= ff.input :first_name,
            input_html: { class: "medium" },
            label: "First names",
            label_html: { class: "govuk-label--s" }

= ff.input :last_name,
            input_html: { class: "medium" },
            label: "Surname",
            label_html: { class: "govuk-label--s" }


= ff.label :post_nominals, label: "Official decorations", class: "govuk-label--s"
