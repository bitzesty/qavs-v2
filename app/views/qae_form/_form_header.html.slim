- steps_first_char = 65 # aka 'A'
- form.steps.each_with_index do |step, index|
  h2.govuk-heading-l.step-header.js-step-condition data-step="step-#{step.title_to_param}" class=('step-current' if (!current_step && step.index == 0) || current_step == step.title_to_param)
    = (steps_first_char + index).chr
    ' .
    = step.title
