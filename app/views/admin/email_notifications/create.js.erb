wrapper = $("#email_notification_" + "<%= @email_notification.kind %>");

<% if @email_notification.valid? %>
  $("ul.notifications", wrapper).append('<%= escape_javascript(render "admin/settings/notification", notification: @email_notification.decorate) %>');
  $(".notification-edit-form, .notification-form", wrapper).addClass("govuk-!-display-none");

  $(".new_email_notification .timepicker", wrapper).val(null);
  $(".new_email_notification .datepicker", wrapper).val(null);
  $("ul.notifications li:last-child .timepicker", wrapper).timePicker()
  $("ul.notifications li:last-child .datepicker", wrapper).datepicker({dateFormat: "dd/mm/yy"})
<% else %>
  $(".notification-form input", wrapper).closest(".govuk-form-group").addClass("govuk-form-group--error");
<% end %>
